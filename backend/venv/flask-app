server {
    listen 80;
    server_name http://localhost:3000.com; # Replace with your domain or IP address

    location /api/getPumpOption {
        proxy_pass http://localhost:5000; # Replace with your Flask app address and port
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /api/getPumpDetails {
        proxy_pass http://localhost:5000; # Replace with your Flask app address and port
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

